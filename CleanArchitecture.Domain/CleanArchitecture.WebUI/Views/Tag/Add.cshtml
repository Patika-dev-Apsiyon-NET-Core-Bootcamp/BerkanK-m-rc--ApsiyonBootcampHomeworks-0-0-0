@model TagViewModel

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label>Tag Name</label>
                @Html.TextBoxFor(x => x.TagName)
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label>Taglar</label>
                @Html.DropDownListFor(x => x.SelectedTags, new MultiSelectList(ViewBag.Categories, "Id", "Name"), new { multiple = "multiple" })
            </div>
        </div>
    </div>
    <input type="hidden" value="1" name="UserId" />
    <div class="row">
        <div class="col-12">
            <input type="submit" class="btn btn-success" value="Kaydet" />
        </div>
    </div>

}